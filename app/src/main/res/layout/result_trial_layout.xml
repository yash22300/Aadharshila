<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
        android:id="@+id/date_trial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:textColor="@color/creative_red"
        android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/total_trial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="total : 00"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/creative_red"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/wrong_trial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wrong : 00"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/creative_red"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/correct_trial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct : 00"
            android:textSize="20sp"
            android:padding="10dp"
            android:layout_gravity="center"
            android:textColor="@color/creative_red"
            android:layout_margin="10dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>