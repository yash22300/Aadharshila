<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseViewActivity"
    android:background="@color/background_color">
    <include
        android:visibility="invisible"
        android:id="@+id/course_view_no_internet_layout"
        layout="@layout/no_internet_layout"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <RelativeLayout
        android:id="@+id/title_course_view"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <include
            android:id="@+id/back_course_view"
            layout="@layout/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>


        <TextView
            android:id="@+id/course_view_title_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/title_background"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:paddingLeft="50dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:text="Topic"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/title_course_view"
        android:id="@+id/course_view_linear_layout1"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="320dp"
        android:orientation="vertical"
        android:background="@drawable/detail_background">
        <TextView
            android:id="@+id/course_e_lecture_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/title_background"
            android:text="e-Lecture"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:visibility="visible"
            android:textColor="@android:color/white"/>

        <FrameLayout
            android:layout_below="@+id/course_e_lecture_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/course_lecture_list_view"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent" />
        </FrameLayout>
        <ProgressBar
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:id="@+id/lecture_course_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/main_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/course_view_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pdf_course_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
        <ProgressBar
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:id="@+id/pdf_course_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/main_color"/>
    </RelativeLayout>
</RelativeLayout>