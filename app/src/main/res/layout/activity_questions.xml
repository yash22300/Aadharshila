<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity"
    android:background="@color/background_color">

    <RelativeLayout
        android:id="@+id/title_ques_subject_layout"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <include
            android:id="@+id/back_ques_subject"
            layout="@layout/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/ques_subject_title"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_background"
            android:text="Subject"
            android:paddingTop="10dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:visibility="visible"
            android:textColor="@android:color/white" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/title_ques_cardview"
        android:layout_width="wrap_content"
        android:layout_below="@id/title_ques_subject_layout"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/title_ques_cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:id="@+id/ques_subject_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/smoky_black">

            <ImageView
                android:id="@+id/question_speaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_record_voice"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/subject_question"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_background"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="serif"
                android:text="Question"
                android:padding="20dp"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/subject_test_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/subject_question"
                android:layout_marginBottom="10dp"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/number_background"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_alignTop="@+id/title_ques_cardview1"
            android:translationZ="2dp"
            android:translationY="-32dp"
            android:layout_marginLeft="35dp">
            <TextView
                android:id="@+id/question_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="@color/smoky_black"
                android:layout_centerInParent="true"
                android:text="1"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/title_ques_cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/question_header_layout">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/question_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:text="Option 1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@color/white"
            android:textColor="@color/black"
            android:paddingTop="13dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/question_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:text="Option 1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:background="@color/white"
                android:textColor="@color/black"
                android:paddingTop="13dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/question_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:text="Option 1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:background="@color/white"
                android:textColor="@color/black"
                android:paddingTop="13dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/question_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="13dp"
                android:text="Option 1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:background="@color/white"
                android:textColor="@color/black"
                android:paddingTop="13dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/question_header_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">
    <androidx.cardview.widget.CardView
        android:id="@+id/next_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:visibility="visible"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/next_text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:text="Next"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@color/smoky_black"
            android:textColor="@color/white"
            android:paddingTop="13dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/submit_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginRight="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible">
        <TextView
            android:id="@+id/submit_text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:text="Submit"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@color/smoky_black"
            android:textColor="@color/white"
            android:paddingTop="13dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/previous_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/previous_text_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:text="Previous"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:background="@color/smoky_black"
            android:textColor="@color/white"
            android:paddingTop="13dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"/>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>