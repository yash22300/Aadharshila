<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog_profile_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:paddingTop="18dp"
    android:layout_marginRight="30dp">
    <LinearLayout
        android:id="@+id/warning_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_box_top"
            android:backgroundTint="@color/creative_green"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic Information"
                android:textSize="18sp"
                android:fontFamily="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"/>
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_update_profile"
                android:tint="@color/white"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_box_bottom"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="40dp"
            android:translationY="-2dp">

                <EditText
                    android:id="@+id/setting_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_background"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textFilter"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/smoky_black"
                    android:textSize="14sp"
                    android:fontFamily="serif"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <TextView
                        android:layout_toLeftOf="@id/settingGenderSpinner"
                        android:layout_marginTop="10dp"
                        android:id="@+id/setting_user_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:fontFamily="serif"
                        android:hint="Gender"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:background="@drawable/icon_background"
                        android:textColor="@color/smoky_black" />
                    <Spinner
                        android:layout_alignParentRight="true"
                        android:dropDownSelector="@drawable/ic_spinner_down"
                        android:id="@+id/settingGenderSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:backgroundTint="@color/main_color"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/icon_background"/>
                </RelativeLayout>

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/setting_user_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:hint="Mobile No."
                    android:maxLength="10"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:fontFamily="serif"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/icon_background"
                    android:textColor="@color/smoky_black" />
            <TextView
                android:id="@+id/setting_user_bday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/icon_background"
                android:ems="10"
                android:hint="DOB"
                android:gravity="center"
                android:focusableInTouchMode="false"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/smoky_black"
                android:textSize="14sp"
                android:fontFamily="serif" />

        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/warning_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:translationY="-20dp">
        <TextView
            android:id="@+id/cancel_alert_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_box_button"
            android:text="Cancel"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textStyle="bold"
            android:textSize="14sp"
            android:fontFamily="serif"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/smoky_black"/>
        <TextView
            android:id="@+id/update_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_box_button"
            android:layout_gravity="right|end"
            android:text="Update"
            android:backgroundTint="@color/creative_green"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:fontFamily="serif"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>