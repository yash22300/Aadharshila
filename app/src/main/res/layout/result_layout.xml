<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/trophy"
            android:layout_marginTop="10dp"
            android:layout_width="85dp"
            android:layout_height="250dp"
            android:src="@drawable/ic_trophy"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:scaleType="centerCrop"
            android:tint="@color/creative_red"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/current_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/creative_red"
            android:text="Current\nStatistics"
            android:layout_gravity="end"
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textAlignment="textEnd"
            android:gravity="end" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/slider_total_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Total : 00"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="30dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:background="@color/creative_red"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_gravity="end"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/slider_wrong_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Wrong : 00"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="36dp"
                android:paddingRight="15dp"
                android:gravity="end"
                android:textColor="@color/white"
                android:background="@color/creative_red"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/slider_correct_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="Correct : 00"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:fontFamily="serif"
                android:paddingBottom="10dp"
                android:paddingLeft="50dp"
                android:paddingRight="15dp"
                android:textColor="@color/white"
                android:background="@color/creative_red"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.cardview.widget.CardView>