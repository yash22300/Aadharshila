<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginBottom="10dp" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    android:layout_marginBottom="22dp"
    android:id="@+id/course_main_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:id="@+id/course_layout_main_cardview"
    android:layout_width="match_parent"
    android:layout_height="219dp"
    app:cardCornerRadius="15dp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/course_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/creative_red">
        <View
            android:id="@+id/course_layout_view1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="80dp"
            android:background="@color/smoky_black"/>
            <androidx.cardview.widget.CardView
                android:layout_below="@+id/course_layout_view1"
                android:id="@+id/course_layout_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/course_layout_cover"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/dance"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>
        <View
            android:layout_below="@+id/course_layout_cardview"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="80dp"
            android:background="@color/smoky_black"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/expandable_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="-25dp"
        android:layout_below="@id/course_layout_main_cardview">
        <LinearLayout
            android:id="@+id/course_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="23dp"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:background="@drawable/detail_background">

        <TextView
            android:id="@+id/course_layout_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic"
            android:textColor="@color/creative_red"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:gravity="left" />
            <TextView
            android:id="@+id/course_layout_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration : 1-3 months"
            android:textColor="@color/smoky_black"
            android:fontFamily="serif"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:paddingTop="5dp"
            android:gravity="left" />
            <TextView
                android:id="@+id/course_layout_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price : Rs.599"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:gravity="left" />
            <TextView
                android:id="@+id/course_layout_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For all students"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:gravity="left" />
            <TextView
                android:id="@+id/course_layout_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description : Ballet, Jazz, Tap, Hip-Hop, Ballroom, Classic, Bhangada, Robot, Break Dance, Michael Jackson"
                android:textColor="@color/smoky_black"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="15sp"
                android:paddingTop="5dp"
                android:gravity="left"
                android:justificationMode="inter_word"/>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/course_layout_enroll_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Enroll Now"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:textColor="@color/white"
                    android:background="@color/creative_red"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/course_view_less"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/number_background"
            android:layout_gravity="bottom"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/course_linear_layout"
            android:translationY="19dp"
            android:layout_marginRight="35dp">
            <ImageView
                android:id="@+id/course_view_less_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:tint="@color/creative_red"
                android:src="@drawable/ic_circle" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/smoky_black"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_arrow_down"
                android:rotation="180"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/course_view_more"
        android:visibility="visible"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/number_background"
        android:layout_gravity="bottom"
        android:layout_alignParentRight="true"
        android:translationZ="2dp"
        android:layout_alignBottom="@id/course_main_container"
        android:translationY="15dp"
        android:layout_marginRight="35dp">
        <ImageView
            android:id="@+id/course_layout_view_more_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_arrow_down"
            android:tint="@color/creative_red"/>
    </RelativeLayout>
</RelativeLayout>