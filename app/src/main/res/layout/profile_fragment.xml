    <LinearLayout
        android:id="@+id/relativeConainer"
        android:layout_below="@+id/profile_title_layout"
        android:layout_above="@id/subscribe_now_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/profile_background"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:outlineAmbientShadowColor="@android:color/white"
                app:cardBackgroundColor="@android:color/white">
                <ImageView
                    android:id="@+id/profile_user_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_user_default" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <ImageView
                android:id="@+id/profile_left_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow"
                android:rotation="90"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/icon_background"
                android:backgroundTint="@color/fragment_title_background"
                android:padding="5dp" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/profile_left_arrow"
                android:layout_toLeftOf="@+id/profile_right_arrow"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/profile_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Name"
                    android:gravity="center_horizontal"
                    android:textSize="18sp"
                    android:fontFamily="serif"
                    android:textColor="@android:color/black" />
                <View
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/setting_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/black"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/profile_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow"
                android:rotation="270"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_background"
                android:backgroundTint="@color/fragment_title_background"
                android:padding="5dp" />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:descendantFocusability="beforeDescendants">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_background">
                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/detail_background">
                        <RelativeLayout
                            android:id="@+id/profile_basic_info_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">
                            <ImageView
                                android:id="@+id/icon_list_profile1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_list"
                                android:padding="10dp"
                                android:background="@drawable/list_background"/>
                            <TextView
                                android:layout_toRightOf="@+id/icon_list_profile1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Basic Information"
                                android:fontFamily="serif"
                                android:textSize="16sp"
                                android:layout_marginLeft="12dp"
                                android:textColor="@color/smoky_black"/>
                            <ImageView
                                android:id="@+id/profile_basic_info_image"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon_arrow_black"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:rotation="90"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/profile_expandable_view_basic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/profile_student_gender"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:fontFamily="serif"
                                android:text="Gender"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:padding="10dp"
                                android:background="@drawable/icon_background"
                                android:textColor="@color/smoky_black" />
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/profile_student_dob"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Date of Birth"
                                android:padding="10dp"
                                android:fontFamily="serif"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_background"
                                android:textColor="@color/smoky_black" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/fragment_title_background"/>
                        <RelativeLayout
                            android:id="@+id/profile_class_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">
                            <ImageView
                                android:id="@+id/icon_list_profile2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_list"
                                android:padding="10dp"
                                android:background="@drawable/list_background"/>
                            <TextView
                                android:layout_toRightOf="@+id/icon_list_profile2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Class"
                                android:fontFamily="serif"
                                android:textSize="16sp"
                                android:layout_marginLeft="12dp"
                                android:textColor="@color/smoky_black"/>
                            <ImageView
                                android:id="@+id/profile_class_image"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon_arrow_black"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:rotation="90"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/profile_expandable_view_class"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/profile_student_class"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Class"
                                android:layout_centerVertical="true"
                                android:padding="10dp"
                                android:fontFamily="serif"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_background"
                                android:textColor="@color/smoky_black" />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:background="@color/fragment_title_background"/>
                        <RelativeLayout
                            android:id="@+id/profile_contact_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp">
                            <ImageView
                                android:id="@+id/icon_list_profile3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/icon_list"
                                android:padding="10dp"
                                android:background="@drawable/list_background"/>
                            <TextView
                                android:layout_toRightOf="@+id/icon_list_profile3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="Contact Information"
                                android:fontFamily="serif"
                                android:textSize="16sp"
                                android:layout_marginLeft="12dp"
                                android:textColor="@color/smoky_black"/>
                            <ImageView
                                android:id="@+id/profile_contact_image"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/icon_arrow_black"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:rotation="90"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/profile_expandable_view_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_marginTop="10dp"
                                android:id="@+id/profile_student_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="Mobile No."
                                android:fontFamily="serif"
                                android:padding="10dp"
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_background"
                                android:textColor="@color/smoky_black" />
                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/subscribe_now_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Subscribe Now"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:fontFamily="serif"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:paddingRight="50dp"/>
</RelativeLayout>