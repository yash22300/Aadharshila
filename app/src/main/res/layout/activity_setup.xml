<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_screen_background"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/icon_background"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/student_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_user_default"
                android:background="@drawable/icon_background"/>
        </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/student_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/icon_background"
        android:ems="10"
        android:hint="Student Name"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/smoky_black"
        android:textSize="14sp"
        android:fontFamily="serif" />
        <EditText
            android:id="@+id/setup_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_background"
            android:ems="10"
            android:hint="DOB"
            android:focusableInTouchMode="false"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/smoky_black"
            android:textSize="14sp"
            android:fontFamily="serif" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/setupGender"
            android:layout_width="match_parent"
            android:layout_toLeftOf="@+id/setupGenderSpinner"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_background"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="Gender"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/smoky_black"
            android:textSize="14sp"
            android:fontFamily="serif" />
        <Spinner
            android:layout_alignParentRight="true"
            android:dropDownSelector="@drawable/ic_spinner_down"
            android:id="@+id/setupGenderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:backgroundTint="@color/main_color"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginRight="12dp"
            android:background="@drawable/icon_background"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_toLeftOf="@+id/setupClassSpinner"
                android:id="@+id/setUpClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_background"
                android:ems="10"
                android:hint="Class"
                android:padding="10dp"
                android:textColor="@color/smoky_black"
                android:textSize="14sp"
                android:fontFamily="serif" />
            <Spinner
                android:layout_alignParentRight="true"
                android:dropDownSelector="@drawable/ic_spinner_down"
                android:id="@+id/setupClassSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:backgroundTint="@color/main_color"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_marginRight="12dp"
                android:background="@drawable/icon_background"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/setupContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/icon_background"
            android:ems="10"
            android:maxLength="10"
            android:hint="Contact Number"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/smoky_black"
            android:textSize="14sp"
            android:fontFamily="serif" />
        <Button
            android:id="@+id/create_new_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Create Account"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="serif"
            android:textAllCaps="false"
            android:textColor="#ffffff" />
    </LinearLayout>
</RelativeLayout>